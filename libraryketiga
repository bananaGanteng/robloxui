    "Slider Text",      -- Text displayed
    0,                  -- Minimum value
    100,                -- Maximum value
    50,                 -- Default value
    function(value)     -- Function with value parameter
        print("Value:", value)
    end
)

-- Example 1: WalkSpeed
Library:AddSlider("Player", "WalkSpeed", 16, 500, 16, function(value)
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
