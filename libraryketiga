--                    âš ï¸ COMMON MISTAKES
-- â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

--[[ 
âŒ WRONG - Tab name typo
Library:AddButton("home", "Test", function() end)  -- lowercase 'home'

âœ… CORRECT - Use exact tab names
Library:AddButton("Home", "Test", function() end)  -- Capital 'H'


âŒ WRONG - Missing callback function
Library:AddToggle("Player", "Speed Boost", false)

âœ… CORRECT - Always include callback
Library:AddToggle("Player", "Speed Boost", false, function(state) end)


âŒ WRONG - Slider min/max reversed
Library:AddSlider("Player", "Speed", 100, 16, 50, function(value) end)

âœ… CORRECT - Min should be less than Max
Library:AddSlider("Player", "Speed", 16, 100, 50, function(value) end)


âŒ WRONG - Forgetting to use _G for global access
local AutoFarm = false  -- Only accessible in this scope
Library:AddToggle("Game", "Farm", false, function(state)
    AutoFarm = state
end)

âœ… CORRECT - Use _G for global variables
_G.AutoFarm = false  -- Accessible everywhere
Library:AddToggle("Game", "Farm", false, function(state)
    _G.AutoFarm = state
end)
]]


-- â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
