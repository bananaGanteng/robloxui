--                    ğŸ› ï¸ UTILITY FUNCTIONS
-- â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

-- Notification Helper
local function Notify(title, text, duration)
    game.StarterGui:SetCore("SendNotification", {
        Title = title or "Universal X";
        Text = text;
        Duration = duration or 3;
    })
end

-- Usage in buttons/toggles:
Library:AddButton("Home", "Test Notification", function()
    Notify("Test", "This is a test notification!", 5)
end)


-- Safe Teleport Function
local function SafeTeleport(position)
    pcall(function()
        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = position
    end)
end

Library:AddButton("Misc", "Safe TP to Spawn", function()
    SafeTeleport(CFrame.new(0, 50, 0))
end)


-- Get Player Function
local function GetPlayer()
    return game.Players.LocalPlayer
end

local function GetCharacter()
    return GetPlayer().Character or GetPlayer().CharacterAdded:Wait()
end

local function GetHumanoid()
    return GetCharacter():WaitForChild("Humanoid")
end


