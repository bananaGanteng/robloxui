--                    ğŸ”€ ADD TOGGLE
-- â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

Library:AddToggle(
    "Tab",              -- Tab name
    "Toggle Text",      -- Text displayed
    false,              -- Default state (true/false)
    function(state)     -- Function with state parameter
        if state then
            print("ON")
        else
            print("OFF")
        end
    end
)

-- Example 1: Simple toggle
Library:AddToggle("Player", "Speed Boost", false, function(state)
    if state then
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 100
    else
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
    end
end)

-- Example 2: Toggle with loop
Library:AddToggle("Game", "Auto Farm", false, function(state)
    _G.AutoFarm = state
    while _G.AutoFarm do
        wait(1)
        -- Your farming code here
    end
end)

-- Example 3: Control toggle from code
local toggle = Library:AddToggle("Player", "Test", false, function(state) end)
toggle.SetState(true)  -- Turn ON programmatically


