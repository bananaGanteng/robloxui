-- â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
-- â•‘  Pattern 1: Toggle + Slider Combo            â•‘
-- â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

_G.SpeedBoost = false
_G.BoostAmount = 100

Library:AddToggle("Player", "Speed Boost", false, function(state)
    _G.SpeedBoost = state
    if state then
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = _G.BoostAmount
    else
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
    end
end)

Library:AddSlider("Player", "Boost Amount", 50, 500, 100, function(value)
    _G.BoostAmount = value
    if _G.SpeedBoost then  -- Update immediately if boost is ON
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
    end
end)


-- â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
-- â•‘  Pattern 2: Auto Farm System                 â•‘
-- â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

_G.AutoFarm = false
_G.FarmSpeed = 50

Library:AddLabel("Game", "â”â”â” Auto Farm Settings â”â”â”")

Library:AddToggle("Game", "Enable Auto Farm", false, function(state)
    _G.AutoFarm = state
    
    spawn(function()
        while _G.AutoFarm do
            wait(1 / _G.FarmSpeed)
            
            -- Your farm logic here
            for _, item in pairs(workspace.Items:GetChildren()) do
                if _G.AutoFarm then
                    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = item.CFrame
                    wait(0.1)
                end
            end
        end
    end)
end)

Library:AddSlider("Game", "Farm Speed", 1, 100, 50, function(value)
    _G.FarmSpeed = value
end)

Library:AddButton("Game", "Teleport to Farm Area", function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(100, 50, 100)
end)


-- â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
-- â•‘  Pattern 3: Visual Settings Section          â•‘
-- â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

Library:AddLabel("Game", "â”â”â” Visual Settings â”â”â”")

Library:AddToggle("Game", "Full Bright", false, function(state)
    local Lighting = game:GetService("Lighting")
    if state then
        Lighting.Brightness = 2
        Lighting.ClockTime = 14
        Lighting.FogEnd = 100000
    else
        Lighting.Brightness = 1
    end
end)

Library:AddSlider("Game", "Field of View", 70, 120, 70, function(value)
    workspace.CurrentCamera.FieldOfView = value
end)

Library:AddSlider("Game", "Time of Day", 0, 24, 12, function(value)
    game:GetService("Lighting").ClockTime = value
end)


-- â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
-- â•‘  Pattern 4: Character Modifications          â•‘
-- â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

Library:AddLabel("Player", "â”â”â” Character Mods â”â”â”")

Library:AddToggle("Player", "God Mode", false, function(state)
    local char = game.Players.LocalPlayer.Character
    if state then
        char.Humanoid.MaxHealth = math.huge
        char.Humanoid.Health = math.huge
    else
        char.Humanoid.MaxHealth = 100
        char.Humanoid.Health = 100
    end
end)

Library:AddToggle("Player", "Infinite Jump", false, function(state)
    _G.InfJump = state
    if state then
        game:GetService("UserInputService").JumpRequest:Connect(function()
            if _G.InfJump then
                game.Players.LocalPlayer.Character.Humanoid:ChangeState("Jumping")
            end
        end)
    end
end)

Library:AddSlider("Player", "Hip Height", 0, 50, 0, function(value)
    game.Players.LocalPlayer.Character.Humanoid.HipHeight = value
end)


