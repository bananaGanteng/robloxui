-- Initialize
local Library = loadstring(game:HttpGet("YOUR_URL"))()
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Global Settings
_G.Settings = {
    Speed = 16,
    SpeedBoost = false,
    AutoFarm = false,
    FarmSpeed = 50
}

-- HOME TAB
Library:AddLabel("Home", "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
Library:AddLabel("Home", "ğŸ‰ Universal X v2.0")
Library:AddLabel("Home", "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
Library:AddLabel("Home", "Player: " .. LocalPlayer.Name)

-- PLAYER TAB
Library:AddLabel("Player", "â”â”â” Movement â”â”â”")

Library:AddToggle("Player", "Speed Boost", false, function(state)
    _G.Settings.SpeedBoost = state
    LocalPlayer.Character.Humanoid.WalkSpeed = state and _G.Settings.Speed or 16
end)

Library:AddSlider("Player", "WalkSpeed", 16, 500, 16, function(value)
    _G.Settings.Speed = value
    if _G.Settings.SpeedBoost then
        LocalPlayer.Character.Humanoid.WalkSpeed = value
    end
end)

Library:AddButton("Player", "Reset Character", function()
    LocalPlayer.Character.Humanoid.Health = 0
end)

-- GAME TAB
Library:AddLabel("Game", "â”â”â” Auto Farm â”â”â”")

Library:AddToggle("Game", "Enable Auto Farm", false, function(state)
    _G.Settings.AutoFarm = state
    spawn(function()
        while _G.Settings.AutoFarm do
            wait(1 / _G.Settings.FarmSpeed)
            -- Farm code here
        end
    end)
end)

Library:AddSlider("Game", "Farm Speed", 1, 100, 50, function(value)
    _G.Settings.FarmSpeed = value
end)

-- MISC TAB
Library:AddButton("Misc", "ğŸ”„ Rejoin Server", function()
    game:GetService("TeleportService"):TeleportToPlaceInstance(
        game.PlaceId, 
        game.JobId, 
        LocalPlayer
    )
end)

print("Universal X Quick Reference Loaded!")
print("Use Library:AddButton/Toggle/Slider/Label to customize!")
